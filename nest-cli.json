{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            { "include": "i18n/**/*", "watchAssets": true },
            { "include": "**/*.html", "watchAssets": true },
            { "include": "**/*.css", "watchAssets": true },
            { "include": "**/*.png", "watchAssets": true },
            { "include": "**/*.xlsx", "watchAssets": true }
        ]
    }
}